page {
	padding-bottom: 180rpx;
}

.scrollarea {
	flex: 1;
	overflow-y: hidden;
}

.reserve {
	padding: 40rpx;
}

.reserve_title {
	color: rgba(16, 16, 16, 1);
	font-size: 36rpx;
	font-weight: 600;
}

.cont_place {
	width: 100%;
	display: flex;
	align-items: center;
	height: 60rpx;
}

.cont_place_imgCon {
	width: 30rpx;
	height: 54rpx;
}

.cont_place_loc {
	padding-left: 10rpx;
	color: rgba(16, 16, 16, 1);
	font-size: 28rpx;
	width: 64%;

}

.cont_place_moy {
	color: rgba(244, 98, 127, 1);
	font-size: 36rpx;
	font-weight: 800;
}

.cont_place_sty {
	padding-left: 10rpx;
	color: rgba(255, 153, 0, 1);
	font-size: 26rpx;
	font-weight: 400;
}



.cont_place_sty_text {
	padding-right: 10rpx;
}

.reserve_cont {
	margin-top: 20rpx;
	border-bottom: 1rpx #EEEDED solid;
	padding-bottom: 20rpx;
}

.reserve_persTitle {
	color: rgba(16, 16, 16, 1);
	font-size: 36rpx;
	font-weight: 600;
	letter-spacing: 4rpx;
	padding: 40rpx 0rpx 0rpx 0rpx;
}

.reserve_pers_select {
	padding: 20rpx 40rpx;
	display: flex;
	border-radius: 28rpx;
	background-color: rgba(255, 255, 255, 1);
	border: 1rpx solid rgba(187, 187, 187, 1);
	margin-top: 20rpx;
}

.reserve_pers_selectIcon {
	text-align: center;
	align-items: center;
	justify-content: center;
	display: flex;
	width: 92rpx;
	height: 92rpx;
	border-radius: 12rpx;
	background-color: rgba(154, 255, 68, 1);
	color: rgba(16, 16, 16, 1);
	font-size: 22rpx;
	border: 2rpx solid rgba(187, 187, 187, 1);
}

.reserve_pers_selectBox {
	padding-left: 40rpx;
	width: 64%;
}

.reserve_pers_selectName {
	color: rgba(16, 16, 16, 1);
	font-size: 32rpx;
	font-weight: bold;
}

.reserve_pers_selectAge {
	color: rgba(16, 16, 16, 1);
	font-size: 28rpx;
	padding-left: 40rpx;
}

.reserve_pers_selectBoxPhone {
	color: rgba(16, 16, 16, 1);
	font-size: 28rpx;
	padding-top: 10rpx;
}

.reserve_pers_selectBind {
	width: 50rpx;
	height: 50rpx;
	border-radius: 50rpx;
	border: 2rpx solid rgba(187, 187, 187, 1);
	margin: auto;
}

.reserve_pers_add {
	margin-top: 46rpx;
	display: flex;
	text-align: center;
	align-items: center;
	justify-content: center;
}

.reserve_pers_addImg {
	width: 48rpx;
	height: 48rpx;
}

.reserve_pers_addPer {
	padding-left: 20rpx;
	color: rgba(255, 5, 5, 1);
	font-size: 36rpx;
	letter-spacing: 4rpx;
	font-weight: 400;
}

.reserve_date {
	padding-top: 40rpx;
}

.reserve_dateTitle {
	color: rgba(16, 16, 16, 1);
	font-size: 36rpx;
	font-weight: 600;
	letter-spacing: 4rpx;
	padding: 30rpx 0rpx;
}

.reserve_dateSelect {
	color: rgba(0, 255, 215, 1);
	font-size: 26rpx;
	font-weight: 400;
	padding: 20rpx 0rpx;
}

.reserve_calendar {
	background-color: rgba(229, 229, 229, 1);
	width: 100%;
	/* height: 400rpx; */
}

.reserve_calendarTitle {
	text-align: center;
}

.reserve_hint {
	color: rgba(16, 16, 16, 1);
	font-size: 28rpx;
	padding: 20rpx 0rpx;
}

.reserve_hintText {
	color: rgba(16, 16, 16, 1);
	font-size: 28rpx;
	text-indent: 2ch;
}

.indexFooter {
	overflow: hidden;
	margin-bottom: 0;
	/* background-color: rgba(255, 0, 0, 1); */
	background-color: rgb(255, 255, 255);
	border: 1rpx solid rgba(187, 187, 187, 1);
	color: rgba(16, 16, 16, 1);
	width: 100%;
	padding: 30rpx;
	position: fixed;
	bottom: 0px;
	display: flex;
	align-items: center;
	z-index: 10000;
}

.indexFooter_box {
	width: 120rpx;
	text-align: center;
	padding-right: 40rpx;
	padding-left: 10rpx;
	/* background-color: darkorchid; */
}

.indexFooter_img {
	width: 50rpx;
	height: 50rpx;
}

.indexFooter_font {
	color: rgba(16, 16, 16, 1);
	font-size: 28rpx;
}

.indexFooter_res {
	border-radius: 0px 0px 0px 0px;
	background-color: rgba(255, 51, 51, 1);
	color: rgba(255, 255, 255, 1);
	font-size: 34rpx;
	text-align: center;
	align-items: center;
	justify-content: center;
	display: flex;
	width: 35%;
	height: 38px;
	font-weight: bold;
	letter-spacing: 4rpx;
}

.indexFooter_all {
	display: flex;
	width: 56%;
	text-align: center;
	align-items: center;
	justify-content: center;
}

.indexFooter_all_Text {
	color: rgba(16, 16, 16, 1);
	font-size: 36rpx;
	padding-right: 30rpx;
}

.indexFooter_all_Mony {
	color: rgba(244, 98, 127, 1);
	font-size: 36rpx;
	font-weight: bold;

}

.cont_place_img {
	/* width: 60rpx;
	height: 60rpx; */
	display: flex;
	text-align: center;
	align-items: center;
	justify-content: center;
}



.header-style {
	background: #188be4;
}

.active-coloro {
	color: #fff;
	background: #188be4;
}


.alendar_title {
	text-align: center;
}

.alendar_List {
	display: flex;
	flex-wrap: wrap;
	text-align: center;
	align-items: center;
}

.alendar_ListTime {
	flex: 0 0 21%;
	width: 21%;
	border: 1rpx solid rgba(187, 187, 187, 1);
	background-color: rgba(255, 255, 255, 1);
	color: rgba(16, 16, 16, 1);
	margin: 10rpx;
	font-size: 24rpx;
	text-align: center;
	padding: 10rpx 0rpx;
}
.redColor{
	background-color: red;
	color: #fff;
}