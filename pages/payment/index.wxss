page {
	height: 100vh;
	display: flex;
	flex-direction: column;
}

.scrollarea {
	flex: 1;
	overflow-y: hidden;
}

.payment {
	padding: 0rpx 40rpx;
}

.payment_box {
	width: 100%;
	text-align: center;
	margin-top: 60rpx;
}

.payment_imgIcon {
	width: 100px;
	height: 100px;
}

.payment_boxSucss {
	color: rgba(16, 16, 16, 1);
	font-size: 40rpx;
	margin-top: 48rpx;
}

.payment_boxText {
	color: rgba(160, 160, 160, 1);
	font-size: 28rpx;
	padding: 20rpx 0rpx;
	letter-spacing: 4rpx;
}

.payment_back {
	background-color: rgba(53, 173, 26, 1);
	color: rgba(255, 255, 255, 1);
	font-size: 36rpx;
	font-weight: 400;
	margin-top: 40rpx;
}

.payment_over {
	background-color: rgba(248, 248, 248, 1);
	color: rgba(0, 0, 0, 1);
	font-size: 36rpx;
	font-weight: 400;
	margin-top: 26rpx;
	border: 2rpx solid rgba(223,223,223,1);
}